<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- Transparent background -->
            <item android:drawable="@android:color/transparent" />

            <!-- Lavender border -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/lavender" />  <!-- Set the desired lavender color for the border -->
                    <corners android:radius="30dp" />  <!-- Set the desired corner radius -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
