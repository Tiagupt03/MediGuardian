<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mediguardian_app_bg"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailCompartment"
        android:text="Compartment #"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:textColor="@color/navy_blue"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="Medicine Name"
        android:layout_gravity="center"
        android:id="@+id/detailTitle"
        android:textSize="18sp"
        android:textColor="@color/navy_blue"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="Tablet Quantity in Compartment"
        android:layout_gravity="center"
        android:id="@+id/detailQuantity"
        android:textSize="18sp"
        android:textColor="@color/navy_blue"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:text="Medicine Start"
        android:layout_gravity="center"
        android:id="@+id/detailStartTimings"
        android:textSize="18sp"
        android:textColor="@color/navy_blue"/>

    <Button
        android:id="@+id/doseManagementButton"
        android:layout_width="195dp"
        android:layout_gravity="center"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/navy_blue"
        android:text="Dosage Management"
        android:textSize="12sp"
        app:cornerRadius="30dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:menu_colorNormal="@color/navy_blue"
            app:menu_colorPressed="@color/navy_blue"
            app:menu_fab_size="normal"
            app:menu_icon="@drawable/baseline_format_list_bulleted_24"
            app:menu_openDirection="up"
            android:contentDescription="@string/fab_content_description"
            android:backgroundTint="@color/navy_blue"
            app:backgroundTint = "@color/white"
            app:menu_showShadow="true">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_autorenew_24"
                app:fab_colorNormal="@color/green"
                app:fab_showShadow="true"
                app:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_delete_24"
                app:fab_colorNormal="@color/red"
                app:fab_showShadow="true"
                app:fab_size="mini" />
        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>

</LinearLayout>